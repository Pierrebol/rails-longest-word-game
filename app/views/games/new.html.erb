<h1>New Game</h1>

<ul>
  <% @letters.each do |letter|%>
  <li>
    <%= letter %>
  </li>
  <% end %>
</ul>
<form action="/score" method="post">
  <input type="text" name="word" class="input" placeholder="Write a word">
  <input type="hidden" name="letters" value=<%= @letters.join %>>
  <input type="submit" value="Play!" class="submit-btn">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
